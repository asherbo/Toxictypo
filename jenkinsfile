pipeline {
    agent any
    stages {
        stage('---Clone From GitHub---') 
        {
            steps {
                git 'https://github.com/asherbo/Toxictypo.git'
                sh 'rm -rf .git'
            }
        }
        stage("build")
        {
            steps
            {
                script
                {   
                    sh 'docker pull maven:3-alpine'
                    sh 'docker container stop asher'
                    sh 'docker container rm asher'
                    sh 'docker container run -i --name toxic -v  /home/asher/Desktop/JENKINS-CI-CD-AWS-ToxicTypoProject-master:/app maven:3-alpine bash'
                    sh 'docker container start toxic'
                    sh 'docker container exec -i asher bash'
                    sh 'pwd'
                    
                }
            }
        }

    }
}
