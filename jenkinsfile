pipeline {
    agent any
    stages {
        stage('---Clone From GitHub---') 
        {
            steps {
                git 'https://github.com/asherbo/Toxictypo.git'
                sh 'rm -rf .git'
            }
        }
        stage("build")
        {
            steps
            {
                script
                {   
                    sh 'docker pull maven:3-alpine'
                    sh 'docker run -it -v /var/jenkins_home/workspace/ToxicTypo:/app maven:3-alpine sh'
                }
            }
        }

    }
}
